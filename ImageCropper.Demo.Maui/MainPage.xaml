<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="ImageCropper.Demo.Maui.MainPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ScrollView Padding="16,24,16,0">
        <VerticalStackLayout Spacing="24">
            <Label Text="Welcome! This project was created to showcase real use cases of the ImageCropper.Demo.Maui Nugget package." TextColor="#512BD4" FontSize="24" LineBreakMode="WordWrap" HorizontalTextAlignment="Center" />
            <Label Text="Profile Photo" FontSize="22" LineBreakMode="WordWrap" VerticalTextAlignment="Center" FontAttributes="Bold" HorizontalTextAlignment="Center" />
            <Grid HorizontalOptions="Center" HeightRequest="256" WidthRequest="256">
                <ImageButton x:Name="User_photo" Clicked="CropBtn_Clicked" Aspect="AspectFill" BackgroundColor="#F7F7F8" WidthRequest="256" HeightRequest="256" CornerRadius="128" />
                <ActivityIndicator x:Name="IsProgress" IsRunning="False" IsVisible="False" WidthRequest="80" HeightRequest="80" />
                <Border InputTransparent="True" BackgroundColor="#107EE0" WidthRequest="60" HeightRequest="60" StrokeShape="Ellipse" StrokeThickness="0" HorizontalOptions="End" VerticalOptions="End">
                    <Label Text="+" FontSize="30" TextColor="White" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" />
                </Border>
            </Grid>
            <Button Text="Change Profile Photo" Clicked="CropBtn_Clicked" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
